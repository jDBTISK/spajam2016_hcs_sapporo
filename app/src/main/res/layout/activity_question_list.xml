<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jdb.bocciinterviewapp.QuestionListActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/questionList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="削除"
        android:id="@+id/deleteButton"
        android:onClick="questionItemDelete"
        android:layout_alignBottom="@+id/questionList"
        android:layout_toLeftOf="@+id/editButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編集"
        android:id="@+id/editButton"
        android:onClick="questionItemEdit"
        android:layout_alignBottom="@+id/questionList"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="追加"
        android:onClick="addQuestionItem"
        android:id="@+id/addQuestionButton"
        android:layout_alignBottom="@+id/questionList"
        android:layout_toRightOf="@+id/editButton"
        android:layout_toEndOf="@+id/editButton" />
</RelativeLayout>
